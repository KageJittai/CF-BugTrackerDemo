@model BugTrackerDemo.Models.TicketDetailViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">

    <label class="control-label">Title</label>
    <pre>@Model.Title</pre>
    
    <label class="control-label">Submitted By</label>
    <pre>@Model.OwnerName</pre>

    @if (ViewBag.page.IsManager == true)
    {
        using (Html.BeginForm("Assign", "Ticket", new { id = Model.Id }, FormMethod.Post, new { Id = "Form1" }))
        {

            <label class="control-label">Assign To</label>
            @Html.DropDownList("assignList", null, htmlAttributes: new { @class = "form-control" })
            <input type="submit" value="Assign" class="btn btn-default" />
        }
    }
    else
    {
        <label class="control-label">Assigned To</label>
        <div>@Model.AssigneeName</div>
    }
    <label class="control-label">Created</label>
    <pre>@Model.CreationDate</pre>

    <label class="control-label">Updated</label>
    <pre>@Model.UpdateDate</pre>

    <pre>@Model.Description</pre>
</div>

<div class="row">

    @foreach (var file in Model.Attachments)
    {

        @file.Uploader
        @file.Uploaded.DateTime.ToString("MM-dd-yyyy")
        @Html.ActionLink(file.FileName, "Download", "Attachment", new { id = file.FileHash }, new { target = "_blank" })
    }

    @using (Html.BeginForm("Upload", "Attachment", new { id = Model.Id },
                                       FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.TextBox("file", new { }, new { type = "file" })
        <input type="submit" value="Upload" class="btn btn-default" />
    }

</div>

<div class="row">
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-1">.col-md-1</div>
</div>

<div class="row">
    @{ bool first = true; }
    @foreach (var comment in @Model.Comments)
    {
        if (first)
        {
            first = false;
        }
        else
        {
            <hr style="border-bottom: solid" />
        }

        <label class="control-label">Author</label>
        <pre>@comment.PosterName</pre>

        <label class="control-label">Date</label>
        <pre>@comment.PostTime.ToString()</pre>
        
        <pre>@comment.Message</pre>
    }
</div>


<div class="row">
    @using (Html.BeginForm("Create", "Comment", new { id = Model.Id }))
    {

        @Html.TextArea("Comment", "", 5, 15, new { style = "width: 100%; resize: none;" })<br />
        <input type="submit" value="New Comment" class="btn btn-default" />
    }
</div>


<p>
    @Html.ActionLink("Back to List", "List")
</p>
